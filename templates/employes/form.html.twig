{% extends "base.html.twig" %}

{% block body %}

	<h1>
		{% if editMode %}
			Modification des informations de l'employé
		{% else %}
			Ajouter un nouvel employé
		{% endif %}
	</h1>

	{{ form_start(formEmployes, {
        attr: {
            novalidate: 'novalidate'
        }
    }) }}


	{{ form_row(formEmployes.prenom) }}
	{{ form_row(formEmployes.nom) }}
	{{ form_row(formEmployes.telephone) }}
	{{ form_row(formEmployes.email) }}
	{{ form_row(formEmployes.adresse) }}
	{{ form_row(formEmployes.poste) }}
	{{ form_row(formEmployes.salaire) }}
	{{ form_row(formEmployes.date_naissance, {
        'format' : 'dd-MM-yyyy'
    }) }}

	<button type="submit" class="btn btn-primary mt-2">
		{% if editMode %}
			Enregister les modifications
		{% else %}
			Ajouter
		{% endif %}
	</button>

	{{ form_end(formEmployes) }}

	{# <input type="text" required> #}

{% endblock %}
