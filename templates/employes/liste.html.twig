{% extends "base.html.twig" %}

{% block body %}


<a class="btn btn-success mt-2" href="{{ path('employe_create') }}">Ajouter un employé</a>

	<table class="table">
		<thead>
			<tr>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Téléphone</th>
				<th>Email</th>
				<th>Adresse</th>
				<th>Poste</th>
				<th>Salaire</th>
				<th>Date de naissance</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for employe in employes %}
				<tr>
					<td>{{ employe.prenom }}</td>
					<td>{{ employe.nom }}</td>
					<td>{{ employe.telephone }}</td>
					<td>{{ employe.email }}</td>
					<td>{{ employe.adresse }}</td>
					<td>{{ employe.poste }}</td>
					<td>{{ employe.salaire }} €</td>
					<td>{{ employe.dateNaissance|date('d/m/Y') }}</td>
					<td>
						<a href="{{ path('employe_edit', {id: employe.id}) }}" class="btn btn-info">Modifier</a>
					</td>
					<td>
						<a href="{{ path('employe_delete', {id: employe.id}) }}" class="btn btn-danger">Supprimer</a>
					</td>
                    
				</tr>
			{% endfor %}
		</tbody>
	</table>












{% endblock %}